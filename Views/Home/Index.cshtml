@model ReliDemo.ViewModels.HeatConsumptionSummaryViewModel

@{
    ViewBag.Title = "智能热网系统";
}
<div class="row-fluid">
	<div onTablet="span12 noMarginLeft" onDesktop="span6">
		@Html.Partial("TopStats", Model.TopStats)





		<div class="box smallstat" style="margin-bottom:0">
			<i class="icon-exclamation red"></i>
			<span class="title">超标站总数</span>
			<span class="value">23<small>个</small></span>
			<span class="time alignvalue">热力站总数：100个</span>
		</div><!--box-->
		
		<div class="row-fluid">
			<div class="circleStats">
				<div class="span4">
					<div class="circleStatsItemBox backgroundColor blue">
						<div class="header">单耗超标站</div>
						<span class="percent">%</span>
						<div class="circleStat">
	                        		<input type="text" value="10" class="whiteCircle" />
						</div>
						<div class="footer">
									<span class="count">
										<span class="number">0</span>
										<span class="unit">个</span>
									</span>
									<span class="sep"> / </span>
									<span class="value">
										<span class="number">100</span>
										<span class="unit">个</span>
									</span>	
								</div>
					</div>
				</div><!--/span-->
				<div class="span4">
					<div class="circleStatsItemBox backgroundColor orange">
						<div class="header">流量超标站</div>
						<span class="percent">%</span>
						<div class="circleStat">
	                        		<input type="text" value="58" class="whiteCircle" />
						</div>
						<div class="footer">
									<span class="count">
										<span class="number">58</span>
										<span class="unit">个</span>
									</span>
									<span class="sep"> / </span>
									<span class="value">
										<span class="number">100</span>
										<span class="unit">个</span>
									</span>	
								</div>
					</div>
				</div><!--/span-->
				<div class="span4">
					<div class="circleStatsItemBox backgroundColor red">
						<div class="header">回温超标站</div>
						<span class="percent">%</span>
						<div class="circleStat">
	                        		<input type="text" value="58" class="whiteCircle" />
						</div>
						<div class="footer">
									<span class="count">
										<span class="number">58</span>
										<span class="unit">个</span>
									</span>
									<span class="sep"> / </span>
									<span class="value">
										<span class="number">100</span>
										<span class="unit">个</span>
									</span>	
								</div>
					</div>
				</div><!--/span-->
				<div class="clearfix"></div>
			</div>
		</div>
		@Html.Partial("CompanyExceed", Model.Companies)
	</div>
	<div onTablet="span12 noMarginLeft" onDesktop="span6">
		<div class="box smallstat">
			<i class="icon-eye-open crimson"></i>
			<span class="title">监控站、智能卡站</span>
			<span class="value">@(Model.智能卡站个数+Model.监控站个数) 个</span>
		</div>
		@Html.Partial("HeatConsumptionTotal", Model.TodayGJ)
		@Html.Partial("HeatConsumptionTotal", Model.YesterdayGJ)


		<div class="box smallstat">
			<i class="icon-pencil blue"></i>
			<span class="title">手抄表站</span>
			<span class="value">@Model.手抄表站个数 个</span>
			<span class="time">最近更新时间 @string.Format("{0:yyyy年MM月dd日}", Model.手抄表最近更新时间)</span>
		</div>

        
        @Html.Partial("ExceedGraph", @Model.ExceedGraph)
		 <!--box-->

		@Html.Partial("HeatConsumptionGraph", Model.Histories)
	</div>
</div><!--row-->
<div class="row-fluid">
	<div onTablet="span12 noMarginLeft" onDesktop="span6" >
		
	</div>
	<div onTablet="span12 noMarginLeft" onDesktop="span6" >
		
	</div>
</div>
<div class="row-fluid">      
    <div class="box blue　span12 noMarginLeft">
	    <div class="box-header">
		    <h2><i class="icon-bar-chart"></i>今日各公司状态统计</h2>
	    </div>
	    <div class="box-content">
		    <div class="row-fluid">
			    <div class="span12">
				    @Html.Partial("CompanyHeatConsumption", Model.Companies)
			    </div>
		    </div>
	    </div>
    </div>
	    


</div>
<div class="row-fluid">
	
	
</div>



