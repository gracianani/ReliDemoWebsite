@model ReliDemo.ViewModels.HeatConsumptionSummaryViewModel

@{
    ViewBag.Title = "智能热网系统";
}

@Html.Partial("TopStats", Model.TopStats)

<div class="row-fluid">

	<div class="span6" onTablet="span12 noMarginLeft" onDesktop="span6">
		@Html.Partial("HeatConsumptionTotal", Model.TodayGJ)
	</div>
	<div class="span6" onTablet="span12 noMarginLeft" onDesktop="span6">
		
		@Html.Partial("HeatConsumptionTotal", Model.YesterdayGJ)
		<div class="row-fluid">
			<div class="box smallstat span6">
				<i class="icon-eye-open crimson"></i>
				<span class="title">监测站总数</span>
				<span class="value">@(Model.智能卡站个数+Model.监控站个数) 个</span>
			</div>
			<a class="box smallstat span6 dialog-trigger" data-dialog="heatTotalDialog">
				<i class="icon-pencil blue"></i>
				<span class="title">汇总时间 : @string.Format("{0:yyyy-MM-dd}",Model.手抄表最近更新时间) 点击查看</span>
				<span class="value">@Model.手抄表站个数 <small>个手抄表站</small></span>
			</a>
		</div>
	</div>
</div>
<div class="row-fluid">

	<div class="span6" onTablet="span12 noMarginLeft" onDesktop="span6">
		@Html.Partial("HeatConsumptionGraph", Model.Histories)
	</div>
	<div class="box span6" onTablet="span12 noMarginLeft" onDesktop="span6">
		@Html.Partial("TemperatureGraph", Model.WeatherGraph)
	</div>
</div><!--row-->
<div class="row-fluid">
	<div class="span6" onTablet="span12 noMarginLeft" onDesktop="span6" >
	<div class="box blue　span12 noMarginLeft">
	    <div class="box-header">
		    <h2><i class="icon-bar-chart"></i>今日各公司状态统计</h2>
	    </div>
	    <div class="box-content" style="padding:25px 10px 30px">
		    <div class="row-fluid">
			    <div class="span12">
				    @Html.Partial("CompanyHeatConsumption", Model.Companies)
			    </div>
		    </div>
	    </div>
    </div>
		
	</div>
	<div onTablet="span12 noMarginLeft" onDesktop="span6" >
		@Html.Partial("ExceedGraph", @Model.ExceedGraph)
		 <!--box-->
	</div>
</div>
<div class="dialog-overlay" id="heatTotalDialog">
	<div class="dialog">
		<div class="dialog-header">
			<h2>手抄表站、监测站汇总后信息</h2>
			<div class="dialog-subtitle">汇总时间 : @string.Format("{0:yyyy-MM-dd}",Model.手抄表最近更新时间) </div>
		</div>
		<div class="dialog-content">
			@Html.Partial("HeatConsumptionTotal", Model.TodayGJ)
			@Html.Partial("CompanyHeatConsumption", Model.Companies)
		</div>
		<div class="dialog-close"><i class="icon-remove"></i></div>
	</div>
</div><!--dialog-overlay-->



