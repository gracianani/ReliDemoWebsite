@model IEnumerable<ReliDemo.Models.HeatConsumptionSummaryItem>
<div class="box">
	<div class="box-header  backgroundColorHeader 
             @if( Model.ElementAt(0).IsToday ) 
             { <text>crimson</text> } 
             else 
             { <text>blue</text> } 
             ">
		<h2><i class="icon-align-justify"></i><span class="break"></span>
             @if ( Model.ElementAt(0).IsToday ) 
             { <text>今日 </text>   } 
             else 
             { <text>昨日</text> } 
        </h2>
		<div class="box-icon">
		</div>
	</div>
	<div class="box-content">
		<table class="table makeTableHeaderAsBoxHeader">
				<thead>
					<tr>
						<th></th>
						<th><a href="#">全网</a></th>
						<th><a href="#">东部</a></th>
						<th><a href="#">西部</a></th>                                          
					</tr>
				</thead>   
				<tbody>
				<tr>
					<td>热力站(个)</td>
                    @foreach (var item in Model)
                    {
                        <td class="center">@item.热力站个数</td>
                    }
				</tr>
				<tr>
					<td>总面积(m<sup>2</sup>)</td>
                    @foreach (var item in Model)
                    {
                        <td class="center">@item.总面积</td>
                    }                                  
				</tr>
				<tr>
					<td>实际投入面积(m<sup>2</sup>)</td>
					@foreach (var item in Model)
                    {
                        <td class="center">@item.实际投入面积</td>
                    }                                    
				</tr>
				<tr>
					<td>万平米循环水量(t)</td>
					@foreach (var item in Model)
                    {
                        <td class="center">@item.万平米循环水量</td>
                    }                                       
				</tr>
                <tr>
					<td>总瞬时单耗</td>
					@foreach (var item in Model)
                    {
                        <td class="center">@item.总瞬时单耗</td>
                    }                                       
				</tr>
                <tr>
					<td>总瞬时流量</td>
					@foreach (var item in Model)
                    {
                        <td class="center">@item.总瞬时流量</td>
                    }                                       
				</tr>
                <tr>
					<td>总瞬时热量</td>
					@foreach (var item in Model)
                    {
                        <td class="center">@item.总瞬时热量</td>
                    }                                       
				</tr>
				</tbody>
			</table>  
	</div>
</div>