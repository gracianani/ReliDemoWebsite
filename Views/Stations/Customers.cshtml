@model ReliDemo.ViewModels.StationCustomersViewModel

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
<div class="span8">
<p>
    @Html.ActionLink("返回热力站列表", "Paged", new object { }, new { @class = "btn btn-primary"})
</p>
</div>
</div>
<div class="row-fluid clearfix stationTitle">
    <h1 class="span6">@Model.StationName
	@if (string.IsNullOrEmpty(Model.数据来源 )) {
		<span class="label label-info"><i class="icon-pencil"></i> 人工抄表站</span> 
	} else {
		<span class="label label-important"><i class="icon-eye-open"></i> @Model.数据来源</span>
	}</h1>
     <div class="span6" onDesktop="span6" onTablet="span12 noMarginLeft">@Html.Partial("_TopMenu")</div>
</div>
<div class="row-fluid">


<div class="scrollableTableContainer">
<table class="table  table-bordered table-hover  table-condensed table-clickhighlight datatable" style="background:white">
    <thead><tr>
        <th>
            收费编号
        </th>
        <th>
            生产编号
        </th>
        <th>
            用户名称
        </th>
        <th>
            公司地址
        </th>
        <th>
            用热地址
        </th>
        <th>
            用户类型
        </th>
        <th>
            收费性质
        </th>
        <th>
            A面积<span class="symbol">(㎡)</span>
        </th>
        <th>
            A超面积<span class="symbol">(㎡)</span>
        </th>
        <th>
            B面积<span class="symbol">(㎡)</span>
        </th>
        <th>
            B超面积<span class="symbol">(㎡)</span>
        </th>
        <th>
            A轻体<span class="symbol">(㎡)</span>
        </th>
        <th>
            B轻体<span class="symbol">(㎡)</span>
        </th>
        <th>
            有无热水
        </th>
        <th>
            已销户
        </th>
        <th>
            重点用户
        </th>
        <th>
            帐套性质
        </th>
        <th>
            热水收费性质
        </th>
    </tr></thead>

@foreach (var item in Model.Customers)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.收费编号)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.生产编号)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.用户名称)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.公司地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.用热地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.用户类型)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.收费性质)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.A面积)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.A超面积)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.B面积)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.B超面积)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.A轻体)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.B轻体)
        </td>
        <td>
            @{
                if (item.有无热水)
                {
                    <text>有</text>
                }
                else
                {
                    <text>无</text>
                }
            }
        </td>
        <td>
            @{
                if (item.已销户)
                {
                    <text>是</text>
                }
                else
                {
                    <text>否</text>
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.重点用户)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帐套性质)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.热水收费性质)
        </td>
    </tr>
}

</table>
</div>

</div>