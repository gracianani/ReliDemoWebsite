@model ReliDemo.ViewModels.ManualDataInputViewModel

@{
    ViewBag.Title = "ManualDataInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    select 
    {
        width:100px;
    }
    input
    {
        width:50px;
    }
    .table td
    {
        vertical-align: bottom;
    }
</style>
<div class="row-fluid">
    <h1>人工抄表
    </h1>
    <div class="span8"></div>
</div>
<div class="row-fluid ">
    <div class="input-group col-sm-4">
    @using (Html.BeginForm("ManualDataInput", "Stations", FormMethod.Get))
    {
        @Html.DropDownList("热力站编号", new SelectList(Model.Stations, "热力站编码", "热力站编码"), "生产编号检索", new { @class = "input-inline input-medium" })
        <text>&nbsp;</text>
        @Html.TextBox("keyword", "", new { placeholder = "热力站名称检索", @class = "input-inline  input-medium" })
        <text>&nbsp;</text>
        @Html.DropDownList("热力站编号", new SelectList(Model.Stations, "热力站编码", "热力站编码"), "热表编号", new { @class = "input-inline input-medium" })
        <text>&nbsp;</text>
        @Html.TextBox("status", "故障状态", new { @class = "input-inline input-medium" })
        <text>&nbsp;</text>
		<span class="input-group-addon"><i class="icon-calendar"></i></span>
		<input type="text" class="form-control input-medium input-inline" id="daterange" value="09/09/2013 - 09/28/2013">
        <input type="submit" value="搜索" class="btn  btn-primary input-inline" style="vertical-align: top;"/>
    }

    @using (Html.BeginForm("UploadManualDataInput", "Stations", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="file" />
        <input type="submit" value="上传文件" class="btn btn-primary" />
    }
    </div>
</div>

<div class="row-fluid">
<div class="scrollableTableContainer">
<table class="table  table-bordered table-hover  table-condensed table-clickhighlight datatable" style="background:white">
        <thead><tr>
            <th>生产编号</th>
            <th>热力站名称</th>
            <th>热表编号</th>
            <th>采集时间</th>
            <th>供压</th>
            <th>回压</th>
            <th>供温</th>
            <th>回温</th>
            <th>累计流量</th>
            <th>流量差量</th>
            <th>累计热量</th>
            <th>热量差量</th>
            <th>热指标</th>
            <th>站内面积</th>
            <th>部门</th>
            <th>管理方式</th>
            <th>管理单位</th>
            <th>有无生活水</th>
            <th>故障状态</th>
        </tr>
		</thead>
        @foreach (var manualInput in Model.StationManualInput)
        {
            <tr>
                <td> @manualInput.Station.热力站编号</td>
                <td> @manualInput.Station.热力站名称</td>
                <td> @manualInput.Station.热力站编码</td>
                <td> @manualInput.采集时间</td>
                <td> @manualInput.供压</td>
                <td> @manualInput.回压</td>
                <td> @manualInput.供温</td>
                <td> @manualInput.回温</td>
                <td> @manualInput.累计流量</td>
                <td> @manualInput.流量差量</td>
                <td> @manualInput.累计热量</td>
                <td> @manualInput.热量差量</td>
                <td> @manualInput.Station.参考热指标</td>
                <td> @manualInput.Station.站面积</td>
                <td> @manualInput.部门</td>
                <td> @manualInput.Station.管理单位</td>
                <td> @manualInput.Station.管理类型</td>
                <td> @manualInput.Station.是否热水站</td>
                <td> @manualInput.故障状态</td>
            </tr>
        }
    </table>
	</div>
</div>