@model IEnumerable<ReliDemo.Models.Managership>

<table class="table table-condensed table-bordered table-hover table-clickhighlight table-dblclickactive datatable" style="background-color:white">
	<thead>
    <tr>
		<th rowspan="2">公司</th>
		<th colspan="2">供热量(GJ)</th>
		<th colspan="3">热指标(kcal/h•㎡)</th>
		<th rowspan="2">万平米循环水量<br/>(t/h)</th>
        <th rowspan="2">站总数(个）</th>
        <th colspan="4">超标站（个)</th>
	</tr>
	<tr>
		<th>计划</th>
		<th>实际</th>
		<th>计划</th>
		<th>计算</th>
		<th>实际运行</th>
		<th>超标总数</th>
		<th>单耗超标</th>
		<th>流量超标</th>
		<th>回温超标</th>
	</tr>
    </thead>
	@foreach (var center in Model)
    {
        <tr>
		<td>@Html.ActionLink(center.管理单位, "ManagershipInfo", new {managershipId = center.ItemID })</td>
		<td>@Convert.ToInt32(center.今日计划GJ).ToString()</td>
		<td>@Convert.ToInt32(center.今日累计GJ).ToString()</td>
		<td>@Convert.ToDecimal(center.今日计划热指标_IC).ToString("0.00")</td>
		<td>@Convert.ToDecimal(center.实际热指标).ToString("0.00")</td>
		<td>@Convert.ToDecimal(center.实际热指标).ToString("0.00")</td>
		<td>@Convert.ToDecimal(center.万平方米流量).ToString("0.00")</td>
        <td>@center.热力站个数</td>
        <td>@center.超标站个数</td>
        <td>@Html.ActionLink(center.单耗超标站个数.ToString(), "../Stations/RealTime", new { selectedCompanyId = center.公司ID, managerships = center.ItemID, exceedHeatFrom = ReliDemo.Infrastructure.Services.ConfigurationService.HeatExceed }) </td>
		<td>@Html.ActionLink(center.流量超标站个数.ToString(), "../Stations/RealTime", new { selectedCompanyId = center.公司ID, managerships = center.ItemID, exceedWaterFrom = ReliDemo.Infrastructure.Services.ConfigurationService.WaterExceed }) </td>
        <td>@Html.ActionLink(center.温度超标站个数.ToString(), "../Stations/RealTime", new { selectedCompanyId = center.公司ID, managerships = center.ItemID, exceedTemperatureFrom = ReliDemo.Infrastructure.Services.ConfigurationService.TemperatureExceed }) </td>
        </tr>
    }
</table>