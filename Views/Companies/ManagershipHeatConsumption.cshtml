@model IEnumerable<ReliDemo.Models.Managership>

<table class="table table-condensed table-bordered table-hover table-clickhighlight table-dblclickactive datatable">
	<thead>
    <tr>
		<th rowspan="2">公司</th>
		<th colspan="2">供热量(GJ)</th>
		<th colspan="3">热指标(kcal/h•㎡)</th>
		<th rowspan="2">万平米循环水量<br/>(t/h)</th>
	</tr>
	<tr>
		<th>计划</th>
		<th>实际</th>
		<th>计划</th>
		<th>计算</th>
		<th>实际运行</th>
	</tr>
    </thead>
	@foreach (var center in Model)
    {
        <tr>
		<td>@Html.ActionLink(center.管理单位, "ManagershipInfo", new {managershipId = center.ItemID })</td>
		<td>@center.今日计划GJ</td>
		<td>@center.今日累计GJ</td>
		<td>@center.今日计划热指标_IC</td>
		<td>@center.实际热指标</td>
		<td>@center.实际热指标</td>
		<td>@center.万平方米流量</td></tr>
    }
</table>