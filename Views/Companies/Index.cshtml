@model ReliDemo.ViewModels.CompanyViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Company.公司</h2>
<div class="row-fluid">
	<div onTablet="span12" onDesktop="span6">
		@Html.Partial("TopStats", Model.TopStats)

		<div class="row-fluid">
			@Html.Partial("HeatConsumptionGraph", Model.Histories)
		</div>

		<div class="box smallstat" style="margin-bottom:0">
			<i class="icon-exclamation red"></i>
			<span class="title">超标站总数</span>
			<span class="value">23<small>个</small></span>
			<span class="time alignvalue">热力站总数：100个</span>
		</div><!--box-->
		
		<div class="row-fluid">
			<div class="circleStats" style="margin-bottom:25px">
				<div class="span4">
					<div class="circleStatsItemBox backgroundColor blue">
						<div class="header">单耗超标站</div>
						<span class="percent">%</span>
						<div class="circleStat">
	                        		<input type="text" value="10" class="whiteCircle" />
						</div>
						<div class="footer">
									<span class="count">
										<span class="number">0</span>
										<span class="unit">个</span>
									</span>
									<span class="sep"> / </span>
									<span class="value">
										<span class="number">100</span>
										<span class="unit">个</span>
									</span>	
								</div>
					</div>
				</div><!--/span-->
				<div class="span4">
					<div class="circleStatsItemBox backgroundColor orange">
						<div class="header">流量超标站</div>
						<span class="percent">%</span>
						<div class="circleStat">
	                        		<input type="text" value="58" class="whiteCircle" />
						</div>
						<div class="footer">
									<span class="count">
										<span class="number">58</span>
										<span class="unit">个</span>
									</span>
									<span class="sep"> / </span>
									<span class="value">
										<span class="number">100</span>
										<span class="unit">个</span>
									</span>	
								</div>
					</div>
				</div><!--/span-->
				<div class="span4">
					<div class="circleStatsItemBox backgroundColor red">
						<div class="header">回温超标站</div>
						<span class="percent">%</span>
						<div class="circleStat">
	                        		<input type="text" value="58" class="whiteCircle" />
						</div>
						<div class="footer">
									<span class="count">
										<span class="number">58</span>
										<span class="unit">个</span>
									</span>
									<span class="sep"> / </span>
									<span class="value">
										<span class="number">100</span>
										<span class="unit">个</span>
									</span>	
								</div>
					</div>
				</div><!--/span-->
				<div class="clearfix"></div>
			</div>
			
		</div>


	</div>
	<div onDesktop="span6" onTablet="span12">
		<div class="box smallstat">
			<i class="icon-eye-open crimson"></i>
			<span class="title">监控站、智能卡站</span>
			<span class="value">123个</span>
			<span class="time">更新时间：2012-12-42 17：12</span>
		</div>
        @Html.Partial("HeatConsumptionTotal", Model.TodayGJ)
        @Html.Partial("HeatConsumptionTotal", Model.YesterdayGJ)


		<div class="box smallstat">
			<i class="icon-pencil blue"></i>
			<span class="title">手抄表站</span>
			<span class="value">123个</span>
			<span class="time">时间段：2012-12-01 ~ 2012-12-03</span>
		</div>
		<div class="box" >
			<div class="box-header  backgroundColorHeader blue">
				<h2><i class="icon-pencil"></i><span class="break"></span>每日平均</h2>
			</div>
			<div class="box-content">
				<table class="table makeTableHeaderAsBoxHeader">
					<thead>
						<tr>
						<th></th>
						<th>全网</th>
						<th>东部</th>
						<th>西部</th>
						</tr>
					</thead>
					<tbody>
						<tr><td>计划供热量(GJ)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>核算供热量(GJ)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>实际供热量(GJ)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>计算热指标(kcal/h•㎡)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>计划热指标(kcal/h•㎡)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>实际运行热指标(kcal/h•㎡)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>万平米循环水量(t/h)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>供暖季预期单耗(GJ/㎡)</td><td>0</td><td>0</td><td>0</td></tr>
						<tr><td>供暖季累计供热量(GJ)</td><td>0</td><td>0</td><td>0</td></tr>
					</tbody>
				</table>
			</div>
		</div> <!--box-->


		
    </div>
</div>

<div class="row-fluid">
	
    <div class="span12 noMarginLeft">
        @Html.Partial("ManagershipHeatConsumption", Model.Centers)
    </div>
</div>

