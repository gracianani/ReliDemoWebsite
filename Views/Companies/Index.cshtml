@model ReliDemo.ViewModels.CompanyViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Company.公司</h2>
<div class="row-fluid">
	@Html.Partial("TopStats", Model.TopStats)
</div>
<div class="row-fluid">
    <div class="span6" onDesktop="span6" onTablet="span12">
        @Html.Partial("HeatConsumptionTotal", Model.TodayGJ)
        @Html.Partial("HeatConsumptionTotal", Model.YesterdayGJ)
		
    </div>
    <div onDesktop="span6" onTablet="span12 noMarginLeft">
		<div class="box">
		<div class="box-header">
				<h2><i class="icon-list"></i>状态统计</h2>
				</div>
				<div class="box-content">
				<table class="table table-bordered table-hover table-condensed">
					<tr><th>热力站总数(个)</th><td>@Model.Company.Managerships.Sum(i=>i.Stations.Count())</td><th>平均热负荷(GCal/h)</th><td>@Model.Company.平均热负荷 </td></tr>
					<tr><th>超标站数量(个)</th><td><big class="red"> @Model.Company.Stations.Count(i => i.昨日实际单耗 > i.计划热指标)  </big></td><th>万平米循环水量(t/h)</th><td> @Model.Company.万平方米流量 </td></tr>
					<tr><th>瞬时单耗(GJ/h·㎡)</th><td> @Model.Company.瞬时单耗 </td><th>累计单耗(GJ/h·㎡)</th><td> @Model.Company.供暖季累计单耗 </td></tr>
					<tr><th>总瞬时流量(t/h)</th><td> @Model.Company.总瞬时流量 </td><th>总瞬时热量(GJ/h)</th><td> @Model.Company.总瞬时热量 </td></tr>
				</table>
				<div class="row-fluid">
						<div onDesktop="span6" onTablet="span12 noMarginLeft">
							<div id="company_exceed_station" class="pieChartWithCenterText" style="height:165px;padding-top:20px;">
							</div>
						</div>
						<div onDesktop="span6" onTablet="span12 noMarginLeft">
							<div id="company_exceed_area" class="pieChartWithCenterText" style="height:165px;padding-top:20px;">
							</div>
						</div>
				</div>
				</div>
		</div>
		<div class="box">
				<div class="box-header">
				<h2><i class="icon-tasks"></i>节能/超标热力站排行</h2>
				</div>
				<div class="box-content">
				<div class="row-fluid">
				    @Html.Partial("EnergyTopChart", Model.EnergyTopChart)
			    </div><!--/row-->
		        </div><!--/box-content-->
        </div><!--/box-->

	</div>
</div>
<div class="row-fluid">
@Html.Partial("HeatConsumptionGraph", Model.Histories)
    <div class="span12" onTablet="span12">
        <table class="table table-bordered backgroundColor white table-condensed table-hover table-clickhighlight table-dblclickactive">
            @foreach( var center in Model.Centers){
                if (Model.Centers.First() == center)
                {
                    <tr><th>中心名称</th><th>投入面积(万㎡)</th><th>热力站数量(个)</th><th>日累计单耗(w/㎡)</th><th>单耗超标站数量(个)</th><th>流量超标站数量(个)</th></tr>
                }
                <tr>
                    <td>@Html.ActionLink(center.管理单位, "ManagershipInfo", new {managershipId = center.ItemID })</td>
                    <td>@( center.Stations.Sum(i=>i.投入面积A) + center.Stations.Sum(i=>i.投入面积B) )</td>
                    <td>@center.Stations.Count()</td>
                    <td>@center.日平均单耗 </td>
                    <td>@center.Stations.Count(i=>i.昨日实际单耗 > i.计划热指标)  </td>
                    <td>@center.Stations.Count(i=>i.万平方米流量 > 1000) </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
jQuery(document).ready(function ($) {
	var company_exceed_station_data = [

        {label: "单耗合格站数量", data:10},

        { label: "单耗超标站数量", data: 20 }

    ];
	var company_exceed_area_data = [

        {label: "万平米流量合格站数量", data:80},

        {label: "万平米流量超标站数量", data: 20}

    ];

    var company_exceed_station_options = {
            series: {
               pie: {
				show: true
				}
            },
			colors:["#2fabe9","#c84628"],
			legend: {
				show:false
			},
			grid: {
				hoverable:true,
				clickable:true
			}
         };

        $.plot($("#company_exceed_station"), company_exceed_station_data, company_exceed_station_options);
        $.plot($("#company_exceed_area"), company_exceed_area_data, company_exceed_station_options); 
	});
</script>