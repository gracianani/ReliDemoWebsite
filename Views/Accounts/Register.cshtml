@model ReliDemo.ViewModels.RegisterViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Register", "Accounts", FormMethod.Post)) {
    @Html.ValidationSummary(true)
    <h2>注册新用户</h2>
    <fieldset>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Email, new { placeholder="请输入电子邮箱" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-field">
            @Html.PasswordFor(model => model.Password, new { placeholder = "请输入密码" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder = "请确认密码" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.姓名, new { placeholder="请输入您的姓名"})
            @Html.ValidationMessageFor(model => model.姓名)
        </div>

        <button type="submit"  class="btn btn-primary col-xs-12" style="width:226px">创建新用户</button>
    </fieldset>
}

<hr />
<div>
    已经注册过了? @Html.ActionLink("返回登录页面","Index", "Home")
</div>